<Window x:Class="Lab4.Task1Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab4"
        mc:Ignorable="d"
        Title="Завдання 1" Height="200" Width="300">
    
    <StackPanel Margin="20" HorizontalAlignment="Center">
        <Label x:Name="statusLabel" Content="Початок роботи" FontSize="16" Margin="0,0,0,20"/>
        
        <Button x:Name="helloButton" Content="Привіт" Width="100" Height="30" Margin="0,0,0,10" 
                Click="HelloButton_Click"/>
        
        <Button x:Name="goodbyeButton" Content="До побачення" Width="100" Height="30" Click="GoodbyeButton_Click"/>
    </StackPanel>
</Window>