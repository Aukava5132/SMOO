<Window x:Class="Lab4.Task3Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Завдання 3" Height="300" Width="400">
    
    <DockPanel Margin="20">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,20">
            <Button x:Name="hideButton" Content="Приховати" Width="80" Height="30" Margin="0,0,10,0" 
                    Click="HideButton_Click"/>
            
            <Button x:Name="showButton" Content="Показати" Width="80" Height="30" Margin="0,0,10,0"
                    Click="ShowButton_Click"/>
            
            <Button x:Name="clearButton" Content="Очистити" Width="80" Height="30" Click="ClearButton_Click"/>
        </StackPanel>
        
        <TextBox x:Name="inputTextBox" DockPanel.Dock="Top" Height="100" TextWrapping="Wrap" 
                 VerticalScrollBarVisibility="Auto" FontSize="14" Text="Введіть текст тут..."/>
    </DockPanel>
</Window>