<Window x:Class="Lab4.Task2Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Завдання 2" Height="250" Width="300">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock x:Name="infoTextBlock" Grid.Row="0" Text="Скритий текст" TextWrapping="Wrap" FontSize="14" 
                   Margin="0,0,0,20"/>
        
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <Button x:Name="hideButton" Content="Сховати" Width="100" Height="30" Margin="0,0,0,10" 
                    Click="HideButton_Click"/>
            
            <Button x:Name="showButton" Content="Показати" Width="100" Height="30" Click="ShowButton_Click"/>
        </StackPanel>
    </Grid>
</Window>