<Window x:Class="Lab4.Task6Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Завдання 6: Кольорові кнопки" Height="450" Width="600"
        SizeChanged="Window_SizeChanged">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        
        <WrapPanel x:Name="buttonsPanel" Grid.Column="0" Margin="2">
        </WrapPanel>
        
        <Border Grid.Column="1" Background="LightGray" Margin="5">
            <StackPanel Margin="10">
                <Label Content="Інформація:" FontWeight="Bold" Margin="0,0,0,10"/>
                
                <TextBlock x:Name="infoTextBlock" TextWrapping="Wrap" Text="Кожна кнопка займає 2/3 ширини вікна. Кольори змінюються динамічно."/>
            </StackPanel>
        </Border>
    </Grid>
</Window>